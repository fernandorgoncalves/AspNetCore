@model Cibergestion.Controllers.funcionarios

@{
    ViewData["Title"] = "Novo Cadastro";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefone" class="control-label"></label>
                <input asp-for="telefone" class="form-control" placeholder="(11)99999-9999" />
                <span asp-validation-for="telefone" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <select asp-for="tipo" class="form-control">
                    <option value="Celular">Celular</option>
                    <option value="Residencial">Residencial</option>
                    <option value="Trabalho">Trabalho</option>
                    <option value="WhatsApp">WhatsApp</option>
                </select>
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="index" class="btn btn-primary">Cancelar</a>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



